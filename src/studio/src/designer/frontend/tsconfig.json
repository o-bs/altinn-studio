{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "downlevelIteration": true,
    "lib": ["es6", "dom", "es7", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./",
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@altinn/recipe-editor/*": ["./packages/recipe-editor/src/*"],
      "@altinn/schema-editor/*": ["./packages/schema-editor/src/*"],
      "@altinn/schema-model/*": ["./packages/schema-model/src/*"],
      "@altinn/ux-editor/*": ["./packages/ux-editor/src/*"],
      "app-shared/*": ["./packages/shared/src/*"]
    }
  },
  "files": ["./declaration.d.ts"],
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "tmp"]
}
